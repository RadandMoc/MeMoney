@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center darkmode">
    <nav class="side-menu side-menu-container">
        <a class="scroll scroll1" href="#top">
            <div>
                <i class="fa-solid fa-house"></i>
            </div>
        </a>
        <a class="scroll" asp-area="" asp-page="/ViewOffers">
            <div>
                <i class="fa-solid fa-hand-holding-dollar"></i>
            </div>
        </a>
        <a class="scroll" asp-area="" asp-page="/SetOffer">
            <div>
                <i class="fa-solid fa-file-invoice-dollar"></i>
            </div>
        </a>
        <a class="scroll scroll1" href="#mems">
            <div>
                <i class="fa-solid fa-user-graduate"></i>
            </div>
        </a>
    </nav>
    <h1 id="top" class="display-4">Witamy</h1>
    <!--<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>-->
    <p>Nasza platforma łączy memiarzy z marketingowcami i PRowcami, więc jeśli jesteś jednym z nich to świetnie trafiłeś!</p>
    <div class="teniefajne" id="offers">
        <div class="lewica">
            <p>Jeśli szukasz zleceń na memy to kliknij</p>
            <button class="offer skokDoOfert"><div class="otoczka">Tutaj</div></button>
        </div>
        <div class="prawica">
            <p>Jeśli potrzebujesz dostać memy to kliknij</p>
            <button class="offer skokDoZrobieniaOfert"><div class="otoczka">Tutaj</div></button>
        </div>
    </div>
    <h2>Strefa analityków memowych:</h2>
    <div class="teniefajne" id="mems">
        <div class="lewica memesy" id="leweMemy">
            <img class="mem" src="https://ukontentowani.pl/wp-content/uploads/2020/11/uk-popularne-memy-1024x768.jpg" alt="" />
