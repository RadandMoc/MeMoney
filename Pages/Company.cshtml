@page
@model MeMoney.Pages.CompanyModel
@{
}


<div class="set-offer-box">
    <h1>Stwórz Firmę</h1>
    <form asp-controller="Companies" asp-action="Create" method="post">
        <input name="__RequestVerificationToken" type="hidden" value="" /> <!-- To jest wymagane dla [ValidateAntiForgeryToken] -->
        <table>
             <tr>
                <td>Login :</td>
                <td><input name="Login" type="text" /></td>
            </tr>
            <tr>
                <td>Password :</td>
                <td><input name="Password" type="text" /></td>
            </tr>
            <tr>
                <td>Nazwa :</td>
                <td><input name="CompanyName1" type="text" /></td>
            </tr>
            <tr>
                <td>Prezes :</td>
                <td><input name="Person1" type="text" /></td>
            </tr>
            <tr>
                <td>NIP :</td>
                <td><input name="NIP1" type="number" /></td>
            </tr>
            <tr>
                <td>KRS :</td>
                <td><input name="KRS1" type="number" /></td>
            </tr>
            <tr>
                <td colspan="2"><input id="Submit1" type="submit" value="potwierdź" /></td>
            </tr>
        </table>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
</div>
